<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="12"
    android:background="#ECDBFF"
    android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoPerfil"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="@string/register"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="34sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/create_your_account"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <EditText
            android:fontFamily="sans-serif-light"
            android:id="@+id/idRegistroNombre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="2dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="@string/enter_your_full_name"
            android:inputType="textPersonName"
            android:padding="15dp" />

        <EditText
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="15dp"
            android:id="@+id/txtFechaDeNacimiento"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="2dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="@string/date_of_birth"
            android:inputType="date"
            android:clickable="true"
            android:focusable="false"
            android:padding="15dp"/>

    <EditText
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="15dp"
        android:id="@+id/txtTelefono"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="2dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="@string/enter_your_telephone_number"
        android:inputType="phone"
        android:padding="15dp" />


    <EditText
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="15dp"
        android:id="@+id/idRegistroCorreo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:elevation="2dp"
        android:hint="@string/enter_your_email"
        android:inputType="textEmailAddress"
        android:padding="15dp" />

    <EditText
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="15dp"
        android:id="@+id/idRegistroContraseña"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:elevation="2dp"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword"
        android:padding="15dp" />

    <EditText
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="15dp"
        android:id="@+id/idRegistroContraseñaRepetida"            android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:elevation="2dp"
        android:ems="10"
        android:hint="@string/confirm_your_password"
        android:inputType="textPassword"
        android:padding="15dp" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>
    <RadioGroup
        android:id="@+id/rgGenero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rdHombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/female"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rdMujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/male"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>

        <Button
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:id="@+id/idRegistroRegistrar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="#9A5ADB"
            android:text="@string/register_"
            android:textSize="18sp"
            android:textStyle="bold"/>


</LinearLayout>